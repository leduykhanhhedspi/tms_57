<%= provide :title, @subject.name %>
<div class="col-xs-6 col-md-6 text-center">
  <h1><%= @course.name %></h1>
  <h2><%= t "subjects.show" %>: <%= @subject.name %></h2>
  <h3><%= @subject.description %></h3>
  <%= render "active_subjects_buttons"%>
</div>
<div class="col-xs-12 col-md-6">
  <h3><%= t "subjects.tasks" %> (<%= @subject.tasks.count %>)</h3>
  <ol>
    <% @subject.tasks.each do |task| %>
      <li>
        <strong><%= task.name %></strong>
        |
        <%= task.description %>
      </li>
    <% end %>
  </ol>
  <%= render "activities/activities" %>
</div>
